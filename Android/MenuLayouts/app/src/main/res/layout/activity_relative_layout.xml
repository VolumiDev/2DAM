<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="RELATIVE LAYOUT"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="378dp"
        android:layout_height="198dp"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="12dp"
        android:text="Posicionamos los elementos tomado como referencia otros elementos\n
Tendremos que describir mediante propiedad la ubcacion de cada uno de los elementos"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_marine"
        android:layout_width="185dp"
        android:layout_height="269dp"
        android:layout_above="@+id/btn_return"
        android:layout_below="@id/tv_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="61dp"
        android:src="@drawable/marineb" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>