<Window x:Class="EjemploTrabajoPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploTrabajoPDF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_generarPdf" FontSize="20" Content="Generar PDF" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" Height="60" Width="176" Click="btn_generarPdf_Click"/>
        <Button x:Name="btn_abrirPdf"  FontSize="20" Content="Abrir PDF" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="60" Width="176" Click="btn_abrirPdf_Click"/>

    </Grid>
</Window>
